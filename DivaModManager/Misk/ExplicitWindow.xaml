<Window x:Class="DivaModManager.ExplicitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DivaModManager" WindowStartupLocation="CenterScreen"
        mc:Ignorable="d" Background="#202020" ResizeMode="NoResize" FontFamily="{StaticResource AnekLatin}"
        Title="Caution" SizeToContent="Height" Width="Auto" MaxWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Image Name="Preview" Source="../Assets/caution.png" Stretch="Uniform" VerticalAlignment="Center" Grid.Row="1" Grid.ColumnSpan="2"/>
        <TextBlock Name="ExplicitReasonText" Grid.ColumnSpan="2" Grid.Row="2" VerticalAlignment="Center" Text="Explicit_Reason Text" Foreground="#f2f2f2" FontSize="24" FontWeight="SemiBold" TextAlignment="Center" HorizontalAlignment="Stretch" Width="Auto" Margin="20,20,20,20" TextWrapping="Wrap"/>
        <Button Grid.Row="3" Grid.Column="0" Content="Yes" FontSize="16" FontWeight="SemiBold" Foreground="#f2f2f2" Background="#494949" Margin="20,5,20,5" Click="Yes_Click"/>
        <Button Grid.Row="3" Grid.Column="1" Content="No" FontSize="16" FontWeight="SemiBold" Foreground="#f2f2f2" Background="#494949" Margin="20,5,20,5" Click="No_Click"/>
    </Grid>
</Window>
