<Window x:Class="DivaModManager.Common.MessageWindow.DmmMessageWindowYesNo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d" Background="#202020" ResizeMode="NoResize" FontFamily="{StaticResource AnekLatin}"
        Title="TitleText"  SizeToContent="WidthAndHeight"
        Keyboard.KeyDown="Window_KeyDown" MinWidth="350" MinHeight="150">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Name="MessageInfo" HorizontalAlignment="Center" Grid.ColumnSpan="2" Grid.Row="0" VerticalAlignment="Top" Text="Message Info" Foreground="#f2f2f2" FontSize="20" FontWeight="SemiBold" TextAlignment="Center" Margin="50,8,50,8"/>
        <TextBlock Name="MessageText" HorizontalAlignment="Center" Grid.ColumnSpan="2" Grid.Row="1" VerticalAlignment="Center" Text="Message Text" Foreground="#f2f2f2" FontSize="16" FontWeight="SemiBold" TextAlignment="Center" Margin="50,8,50,8"/>
        <Button Name="Button_1" Grid.Row="2" Grid.Column="0" Content="Yes" MinWidth="120" MinHeight="35" FontSize="16" FontWeight="SemiBold" Foreground="#f2f2f2" Background="#494949" Margin="30,5,30,5" Click="Yes_Click"/>
        <Button Name="Button_2" Grid.Row="2" Grid.Column="1" Content="No" MinWidth="120" MinHeight="35" FontSize="16" FontWeight="SemiBold" Foreground="#f2f2f2" Background="#494949" Margin="30,5,30,5" Click="No_Click"/>
    </Grid>
</Window>
